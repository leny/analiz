// imports
@import "kouto-swiss"

// resets
meyer-reset()
box-sizing-reset()

// fonts
font-face( "FiraSans", "../assets/fonts/firasans/FiraSans-Regular", formats: eot woff )
font-face( "FiraSans", "../assets/fonts/firasans/FiraSans-RegularItalic", normal, italic, formats: eot woff )
font-face( "FiraSans", "../assets/fonts/firasans/FiraSans-Bold", bold, formats: eot woff )
font-face( "FiraSans", "../assets/fonts/firasans/FiraSans-BoldItalic", bold, italic, formats: eot woff )
font-face( "FiraSans", "../assets/fonts/firasans/FiraSans-Light", lighter, formats: eot woff )
font-face( "FiraSans", "../assets/fonts/firasans/FiraSans-LightItalic", lighter, italic, formats: eot woff )
FiraSans = "FiraSans", font-stack( "Helvetica" )
font-face( "FiraMono", "../assets/fonts/FiraMono/FiraMono-Regular", formats: eot woff )
font-face( "FiraMono", "../assets/fonts/FiraMono/FiraMono-Bold", bold, formats: eot woff )
FiraMono = "FiraMono", font-stack( "Consolas" )
font-face( "WebHostingHub", "../assets/fonts/webhostinghub/webhostinghub-glyphs-webfont", formats: eot ttf svg )
Glyphs = "WebHostingHub"

*
    -webkit-font-smoothing antialiased

html
    height 100%
    font normal 62.5% FiraSans
    color black

body
    position relative
    height 100%
    clear fix
    background white

.left
    width 240px
    height 100%
    float left
    border-right 1px solid #ccc
    background #eee
    h3
        height 24px
        margin 0 auto 5px
        padding 1px 0 0 10px
        background #ddd
        border-bottom 1px solid #ccc
        font bold 1.2rem/24px FiraSans
        color #444
        text-transform uppercase
    #files
        position relative
        width auto
        height 110px
        input
            position absolute
            left -9999px
        a
            display block
            margin 0 auto
            font normal 1.1rem FiraSans
            color #666
            text-align center
            text-decoration none
            &:before
                content ""
                display block
                margin 0 auto 5px
                font normal 5rem Glyphs
            &.loaded
                &:before
                    content ""
    #tasks
        h3
            border-top 1px solid #ccc
        ol
            height 411px
            overflow auto
            &:empty
                text-align center
                &:before
                    content "please, select a file to begin"
                    font normal 1.1rem/411px FiraSans
                    color #888
            &.loading
                &:before
                    content "loading tasks..."
                    display inline-block
                    margin 200px auto 0
                    padding 40px 0 0
                    background transparent url( "../assets/img/spinner.svg" ) center top no-repeat
                    background-size 30px auto
                    font normal 1.1rem FiraSans
            > li
                margin 0 10px 6px
                padding 2px 0 0
                > span
                    display block
                    padding 0 0 6px
                    border-bottom 1px solid #aaa
                    a.select
                        font normal 1.2rem/1.6rem FiraSans
                        color #444
                        text-decoration none
                        &:before
                            content ""
                            margin 0 5px 0 0
                            font normal 1.4rem Glyphs
                            vertical-align -.3rem
                    a.config
                        float right
                        font normal 1.4rem Glyphs
                        color #444
                        text-decoration none
                        &:before
                            content ""
                form
                    display none
                    padding 10px
                    fieldset
                        margin 0 auto 10px
                        legend
                            display block
                            width 100%
                            margin 0 auto 8px
                            font bold 1.2rem FiraSans
                            color #444
                            text-align left
                        .form-elt
                            margin 0 auto 5px
                            label
                                display block
                                position relative
                                margin 0 auto 7px
                                input
                                    position absolute
                                    left -5000px
                                span
                                    font normal 1.1rem FiraSans
                                    color #555
                                    cursor pointer
                                    &:before
                                        content ""
                                        margin 0 5px 0 0
                                        font normal 1.4rem Glyphs
                                        vertical-align -.3rem
                                input[type="checkbox"] + span:before
                                    content ""
                                input[type="checkbox"]:checked + span:before
                                    content ""
                                input[type="radio"] + span:before
                                    content ""
                                input[type="radio"]:checked + span:before
                                    content ""
                                p
                                    display none
                                    position absolute
                                    width 90%
                                    left 50%
                                    top 22px
                                    margin 0 0 0 -45%
                                    padding 5px
                                    z-index 1000
                                    background white
                                    border-radius 4px
                                    border 1px solid #999
                                    font normal 1.0rem/1.2 FiraSans
                                    color #666
                                    &:before
                                        content ""
                                        display block
                                        position absolute
                                        width 0
                                        height 0
                                        top -20px
                                        left 50%
                                        margin 0 0 0 -10px
                                        border 10px solid transparent
                                        border-bottom 10px solid #888
                                    &:after
                                        content ""
                                        display block
                                        position absolute
                                        width 0
                                        height 0
                                        top -19px
                                        left 50%
                                        margin 0 0 0 -10px
                                        border 10px solid transparent
                                        border-bottom 10px solid white
                                &:hover
                                    p
                                        display block
                            &.multiple
                                strong
                                    display block
                                    margin 0 0 4px
                                    font bold 1.1rem FiraSans
                                    color #555
                                label
                                    margin 0 0 7px 20px
                &.open
                    form
                        display block
                &.selected
                    > span a.select:before
                        content ""
                &:last-child
                    span
                        border-bottom 0
    div.actions
        height 50px
        padding 8px 0 0
        background #ddd
        border-top 1px solid #ccc
        a
            display block
            width 90%
            margin 0 auto
            background-image linear-gradient( to bottom, white, #f0f0f0 )
            border 1px solid #ccc
            border-radius 4px
            font normal 1.4rem/2 FiraSans
            color #666
            text-decoration none
            text-align center

.right
    height 600px
    > ol
        height 600px
        overflow auto
        counter-reset report
        > li
            position relative
            counter-increment report
            padding 0 0 0 40px
            background #ddd
            border-top 1px solid rgba( white, .5 )
            border-bottom 1px solid #ccc
            &.open
                > a
                    position relative
                    display block
                    padding 0 0 0 5px
                    background white
                    border-left 1px solid #aaa
                    border-bottom 1px solid #ccc
                    color #555
                    text-decoration none
                    > strong
                        font normal 1.2rem/24px FiraMono
                    > em
                        float right
                        margin 0 5px 0 0
                        font normal 1.1rem/24px FiraSans
                    > span
                        float right
                        margin 0 10px 0 0
                        font normal 1.1rem/24px FiraSans
                        color #777
                > ol
                    background white
                    border-left 1px solid #aaa
                    > li
                        border-bottom 1px solid #aaa
                        > strong
                            display block
                            padding 2px 0 0 5px
                            background #eee
                            border-bottom 1px solid #aaa
                            font normal 1.2rem/20px FiraSans
                            color #555
                        div.result
                            > span
                                display block
                                font bold 1.2rem/2 FiraSans
                                color #555
                                text-align center
                            ol
                                counter-reset messages
                                > li
                                    counter-increment messages
                                    position relative
                                    min-height 50px
                                    padding 0 0 0 50px
                                    border-left 1px solid #ccc
                                    strong
                                        display inline-block
                                        width 50%
                                        background #eef
                                        font bold 1.2rem FiraSans
                                        color #999
                                    em
                                        display inline-block
                                        width 50%
                                        padding 0 5px 0 0
                                        background-image linear-gradient( to right, #eef, white )
                                        font bold 1.2rem FiraSans
                                        color #999
                                        text-align right
                                        &:before
                                            content "line "
                                    span
                                        display block
                                        background #fff
                                        padding 5px
                                        border-top 1px solid #ccc
                                        font normal 1.2rem FiraSans
                                        color #999
                                    &:before
                                        content ""
                                        display block
                                        absolute 0 false 0 0
                                        size 50px false
                                        background #eef
                                        font normal 4rem Glyphs
                                        color rgba( white, .5 )
                                        text-align center
                                    &:after
                                        content counter(messages)
                                        display block
                                        absolute 0 false 0 0
                                        size 50px false
                                        font bold 4.5rem FiraSans
                                        color rgba( white, 1 )
                                        text-align center
                        &:last-child
                            border-bottom 0
                &:before
                    content counter(report)
                    display block
                    absolute 0 false false 0
                    size 40px 100%
                    padding 1px 0 0
                    border-left 1px solid #ccc
                    border-right 1px solid #ccc
                    font normal 3.6rem/48px FiraMono
                    color #777
                    text-align center
            &.closed
                > a
                    position relative
                    display block
                    padding 0 0 0 5px
                    background white
                    border-left 1px solid #bbb
                    font normal 1.2rem/24px FiraSans
                    color #555
                    text-decoration none
                    strong
                        font normal 1.2rem/24px FiraMono
                    em
                        float right
                        margin 0 5px 0 0
                        font normal 1.1rem/24px FiraSans
                    span
                        float right
                        margin 0 10px 0 0
                        font normal 1.1rem/24px FiraSans
                        color #777
                ol
                    display none
                &:before
                    content counter(report)
                    display block
                    absolute 0 false false 0
                    size 40px false
                    padding 1px 0 0
                    border-left 1px solid #ccc
                    border-right 1px solid #ccc
                    font normal 1.2rem/24px FiraMono
                    color #777
                    text-align center
                &:nth-child(even)
                    a
                        background #f8f8ff
            &:first-child
                border-top 0
        &:empty
            text-align center
            &:before
                content "please, select a file & some task to begin"
                font normal 1.1rem/600px FiraSans
                color #888
        &.loading
            li
                display none
            &:before
                content "running tasks..."
                display block
                margin 260px auto 0
                padding 40px 0 0
                background transparent url( "../assets/img/spinner.svg" ) center top no-repeat
                background-size 30px auto
                font normal 1.1rem FiraSans
                color #666
                text-align center
